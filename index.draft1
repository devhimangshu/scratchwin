<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Scratch & Win - APK Download</title>
  <link rel="icon" href="https://scratchwin.site/logo.jpg" type="image/jpeg" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Reset and base */
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
      color: #f0e9e1;
      overflow-x: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    a {
      text-decoration: none;
    }
    /* Button */
    .btn-golden {
      background: linear-gradient(90deg, #b8860b 0%, #ffd700 25%, #b8860b 50%, #ffd700 75%, #b8860b 100%);
      background-size: 200% 100%;
      animation: shimmer 3s linear infinite;
      color: #1a1a1a;
      font-weight: 700;
      box-shadow: 0 0 12px #ffd700cc;
      border-radius: 9999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0 1.25rem;
      font-size: 0.875rem;
      user-select: none;
      transition: box-shadow 0.3s ease, transform 0.2s ease;
      cursor: pointer;
      border: none;
      height: 40px;
      white-space: nowrap;
      min-width: 140px;
    }
    .btn-golden:hover,
    .btn-golden:focus {
      box-shadow: 0 0 20px #ffec8b, 0 0 30px #ffd700;
      outline: none;
      transform: scale(1.05);
    }
    @keyframes shimmer {
      0% {
        background-position: -200% 0;
      }
      100% {
        background-position: 200% 0;
      }
    }
    /* Floating coins */
    @keyframes floatUp {
      0% {
        transform: translateY(0) rotate(0deg);
        opacity: 1;
      }
      100% {
        transform: translateY(-120vh) rotate(360deg);
        opacity: 0;
      }
    }
    .coin {
      position: fixed;
      width: 28px;
      height: 28px;
      pointer-events: none;
      user-select: none;
      filter: drop-shadow(0 0 3px #ffd700cc);
      animation-timing-function: linear;
      animation-fill-mode: forwards;
      z-index: 0;
      animation-name: floatUp;
    }
    /* Header */
    header {
      background: rgba(15, 12, 41, 0.9);
      backdrop-filter: saturate(180%) blur(10px);
      border-bottom: 1px solid #b8860b;
      position: sticky;
      top: 0;
      z-index: 60;
      padding: 0.75rem 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 420px;
      margin: 0 auto;
      animation: slideDownFade 0.8s ease forwards;
      opacity: 0;
      transform: translateY(-20px);
    }
    @keyframes slideDownFade {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    header nav {
      display: none;
    }
    header nav.mobile-menu {
      display: flex;
      flex-direction: column;
      background: rgba(15, 12, 41, 0.95);
      border-top: 1px solid #b8860b;
      position: absolute;
      top: 3.75rem;
      left: 0;
      right: 0;
      max-width: 420px;
      margin: 0 auto;
      border-radius: 0 0 12px 12px;
      overflow: hidden;
      z-index: 50;
      animation: fadeInScale 0.3s ease forwards;
    }
    @keyframes fadeInScale {
      from {
        opacity: 0;
        transform: scaleY(0.8);
      }
      to {
        opacity: 1;
        transform: scaleY(1);
      }
    }
    header nav.mobile-menu.hidden {
      display: none !important;
    }
    header nav.mobile-menu a {
      padding: 0.75rem 1rem;
      font-weight: 600;
      color: #f0e9e1;
      border-bottom: 1px solid #b8860b;
      transition: background-color 0.3s ease;
      font-size: 0.875rem;
    }
    header nav.mobile-menu a:hover,
    header nav.mobile-menu a:focus {
      background: #b8860b;
      color: #1a1a1a;
      outline: none;
    }
    header .logo {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      user-select: none;
      animation: fadeInLeft 1s ease forwards;
      opacity: 0;
      transform: translateX(-20px);
    }
    @keyframes fadeInLeft {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    header .logo img {
      height: 36px;
      width: auto;
      border-radius: 6px;
      box-shadow: 0 0 8px #ffd700aa;
    }
    header .logo span {
      font-weight: 700;
      font-size: 1.25rem;
      color: #ffd700;
      text-shadow: 0 0 6px #ffd700cc;
      letter-spacing: 0.05em;
    }
    header button.menu-toggle {
      background: none;
      border: none;
      color: #ffd700;
      font-size: 1.5rem;
      cursor: pointer;
      user-select: none;
      transition: color 0.3s ease;
      animation: fadeInRight 1s ease forwards;
      opacity: 0;
      transform: translateX(20px);
    }
    @keyframes fadeInRight {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    header button.menu-toggle:hover,
    header button.menu-toggle:focus {
      color: #fff;
      outline: none;
    }
    /* Main container */
    main {
      max-width: 420px;
      margin: 1rem auto 5rem;
      padding: 0 1rem;
    }
    /* Hero */
    .hero {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.25rem;
      text-align: center;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
    }
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .hero h1 {
      font-size: 2.25rem;
      font-weight: 800;
      line-height: 1.1;
      background: linear-gradient(90deg, #ffd700, #b8860b);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      filter: drop-shadow(0 0 6px #ffd700cc);
      animation: textGlow 3s ease-in-out infinite alternate;
    }
    @keyframes textGlow {
      0% {
        filter: drop-shadow(0 0 6px #ffd700cc);
      }
      100% {
        filter: drop-shadow(0 0 12px #ffec8bcc);
      }
    }
    .hero h2 {
      font-size: 1.125rem;
      font-weight: 600;
      color: #fbbf24;
      text-shadow: 0 0 4px #fbbf24aa;
      animation: fadeIn 2s ease forwards;
      opacity: 0;
      animation-delay: 0.5s;
      animation-fill-mode: forwards;
    }
    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }
    .hero p {
      font-size: 0.875rem;
      color: #e0c97a;
      max-width: 320px;
      line-height: 1.4;
      user-select: text;
      animation: fadeIn 2s ease forwards;
      opacity: 0;
      animation-delay: 1s;
      animation-fill-mode: forwards;
    }
    .hero .btn-group {
      display: flex;
      gap: 1rem;
      margin-top: 1.5rem;
      justify-content: center;
      flex-wrap: wrap;
      animation: fadeIn 2s ease forwards;
      opacity: 0;
      animation-delay: 1.5s;
      animation-fill-mode: forwards;
    }
    .hero img {
      width: 280px;
      max-width: 100%;
      border-radius: 16px;
      box-shadow: 0 0 20px #ffd700cc;
      user-select: none;
      animation: floatBounce 4s ease-in-out infinite;
    }
    @keyframes floatBounce {
      0%, 100% {
        transform: translateY(0);
        filter: drop-shadow(0 0 20px #ffd700cc);
      }
      50% {
        transform: translateY(-10px);
        filter: drop-shadow(0 0 30px #ffec8bcc);
      }
    }
    /* Video Section */
    .video-wrapper {
      position: relative;
      width: 280px;
      max-width: 100%;
      border-radius: 16px;
      box-shadow: 0 0 20px #ffd700cc;
      overflow: hidden;
      user-select: none;
      cursor: pointer;
      margin-top: 1.5rem;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
      animation-delay: 2s;
      animation-fill-mode: forwards;
    }
    .video-wrapper img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 16px;
      transition: transform 0.3s ease;
    }
    .video-wrapper:hover img,
    .video-wrapper:focus-within img {
      transform: scale(1.05);
    }
    .video-overlay-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: linear-gradient(90deg, #b8860b 0%, #ffd700 25%, #b8860b 50%, #ffd700 75%, #b8860b 100%);
      background-size: 200% 100%;
      animation: shimmer 3s linear infinite;
      color: #1a1a1a;
      font-weight: 700;
      box-shadow: 0 0 12px #ffd700cc;
      border-radius: 9999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0 1.25rem;
      font-size: 0.875rem;
      user-select: none;
      transition: box-shadow 0.3s ease, transform 0.2s ease;
      cursor: pointer;
      border: none;
      height: 40px;
      white-space: nowrap;
      min-width: 140px;
      z-index: 10;
      filter: drop-shadow(0 0 10px #ffd700cc);
    }
    .video-overlay-button:hover,
    .video-overlay-button:focus {
      box-shadow: 0 0 20px #ffec8b, 0 0 30px #ffd700;
      outline: none;
      transform: translate(-50%, -50%) scale(1.1);
    }
    /* Floating video modal */
    .video-modal {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.8);
      background: #1a1a2e;
      border-radius: 16px;
      box-shadow: 0 0 30px #ffd700cc;
      z-index: 1000;
      max-width: 100vw;
      max-height: 100vh;
      display: none;
      flex-direction: column;
      overflow: hidden;
      opacity: 0;
      transition: opacity 0.3s ease, transform 0.3s ease;
    }
    .video-modal.active {
      display: flex;
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
    .video-modal iframe {
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 16px 16px 0 0;
    }
    .video-modal .close-button {
      background: #b8860b;
      color: #1a1a1a;
      font-weight: 700;
      border: none;
      cursor: pointer;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      border-radius: 0 0 16px 16px;
      user-select: none;
      transition: background-color 0.3s ease;
    }
    .video-modal .close-button:hover,
    .video-modal .close-button:focus {
      background: #ffd700;
      outline: none;
    }
    /* Features */
    .features {
      margin-top: 2.5rem;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
      animation-delay: 2.5s;
      animation-fill-mode: forwards;
    }
    .features h2 {
      font-size: 1.75rem;
      font-weight: 800;
      color: #ffd700;
      text-align: center;
      margin-bottom: 1.5rem;
      text-shadow: 0 0 8px #ffd700cc;
      animation: textGlow 3s ease-in-out infinite alternate;
    }
    .features-list {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    .feature-item {
      background: #1a1a2e;
      border-radius: 12px;
      padding: 1rem 1.25rem;
      box-shadow: 0 0 12px #b8860baa;
      border: 1px solid #b8860b;
      display: flex;
      gap: 1rem;
      align-items: flex-start;
      user-select: none;
      transition: box-shadow 0.3s ease, transform 0.3s ease;
      cursor: default;
      opacity: 0;
      transform: translateY(20px);
      animation-fill-mode: forwards;
    }
    .feature-item:hover {
      box-shadow: 0 0 20px #ffd700dd;
      transform: translateY(0) scale(1.03);
    }
    .feature-icon {
      font-size: 1.75rem;
      color: #ffd700;
      flex-shrink: 0;
      margin-top: 0.15rem;
      filter: drop-shadow(0 0 4px #ffd700cc);
      animation: iconPulse 3s ease-in-out infinite;
    }
    @keyframes iconPulse {
      0%, 100% {
        filter: drop-shadow(0 0 4px #ffd700cc);
      }
      50% {
        filter: drop-shadow(0 0 12px #ffec8bcc);
      }
    }
    .feature-content h3 {
      font-weight: 700;
      font-size: 1.125rem;
      color: #fbbf24;
      margin-bottom: 0.25rem;
      text-shadow: 0 0 4px #fbbf24aa;
    }
    .feature-content p {
      font-size: 0.875rem;
      color: #e0c97a;
      line-height: 1.4;
    }
    /* Animate each feature item with stagger */
    .feature-item:nth-child(1) {
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: 2.6s;
    }
    .feature-item:nth-child(2) {
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: 2.8s;
    }
    .feature-item:nth-child(3) {
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: 3s;
    }
    .feature-item:nth-child(4) {
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: 3.2s;
    }
    .feature-item:nth-child(5) {
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: 3.4s;
    }
    .feature-item:nth-child(6) {
      animation: fadeInUp 0.6s ease forwards;
      animation-delay: 3.6s;
    }
    /* Screenshot */
    .screenshot {
      margin-top: 2.5rem;
      display: flex;
      justify-content: center;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
      animation-delay: 3.8s;
      animation-fill-mode: forwards;
    }
    .screenshot img {
      width: 280px;
      border-radius: 16px;
      box-shadow: 0 0 20px #ffd700cc;
      user-select: none;
      animation: floatBounce 4s ease-in-out infinite;
    }
    /* Reviews */
    .reviews {
      margin-top: 2.5rem;
      max-width: 420px;
      overflow: hidden;
      position: relative;
      user-select: none;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
      animation-delay: 4.2s;
      animation-fill-mode: forwards;
    }
    .reviews h2 {
      font-size: 1.75rem;
      font-weight: 800;
      color: #ffd700;
      text-align: center;
      margin-bottom: 1rem;
      text-shadow: 0 0 8px #ffd700cc;
      animation: textGlow 3s ease-in-out infinite alternate;
    }
    .reviews-scroll {
      display: flex;
      gap: 1rem;
      animation: scrollReviews 10s linear infinite;
      will-change: transform;
    }
    @keyframes scrollReviews {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }
    .review-card {
      background: #1a1a2e;
      border-radius: 16px;
      padding: 1rem 1.25rem;
      box-shadow: 0 0 12px #b8860baa;
      border: 1px solid #b8860b;
      min-width: 280px;
      max-width: 280px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      color: #e0c97a;
      transition: box-shadow 0.3s ease, transform 0.3s ease;
      cursor: default;
      animation: fadeInUp 0.8s ease forwards;
      opacity: 0;
      transform: translateY(20px);
    }
    .review-card:hover {
      box-shadow: 0 0 20px #ffd700dd;
      transform: translateY(0) scale(1.03);
    }
    /* Stagger review cards fade in */
    .review-card:nth-child(1) {
      animation-delay: 4.3s;
    }
    .review-card:nth-child(2) {
      animation-delay: 4.5s;
    }
    .review-card:nth-child(3) {
      animation-delay: 4.7s;
    }
    .review-avatar {
      width: 64px;
      height: 64px;
      border-radius: 9999px;
      border: 2px solid #b8860b;
      box-shadow: 0 0 8px #ffd700cc;
      object-fit: cover;
      margin-bottom: 0.75rem;
      user-select: none;
    }
    .review-text {
      font-style: italic;
      font-size: 0.875rem;
      margin-bottom: 0.75rem;
      line-height: 1.3;
      color: #f0e9e1cc;
    }
    .review-footer {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 700;
      font-size: 0.875rem;
      color: #ffd700;
      text-shadow: 0 0 6px #ffd700cc;
    }
    .review-footer i {
      color: #fbbf24;
      filter: drop-shadow(0 0 4px #fbbf24cc);
    }
    /* FAQ */
    .faq {
      margin-top: 2.5rem;
      max-width: 420px;
      margin-left: auto;
      margin-right: auto;
      user-select: none;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
      animation-delay: 4.8s;
      animation-fill-mode: forwards;
    }
    .faq h2 {
      font-size: 1.75rem;
      font-weight: 800;
      color: #ffd700;
      text-align: center;
      margin-bottom: 1rem;
      text-shadow: 0 0 8px #ffd700cc;
      animation: textGlow 3s ease-in-out infinite alternate;
    }
    .faq dl {
      background: #1a1a2e;
      border-radius: 16px;
      border: 1px solid #b8860b;
      box-shadow: 0 0 12px #b8860baa;
      padding: 1rem 1.25rem;
      color: #e0c97a;
      font-size: 0.875rem;
    }
    .faq dt {
      cursor: pointer;
      padding: 0.75rem 0.5rem;
      font-weight: 700;
      color: #fbbf24;
      display: flex;
      justify-content: space-between;
      align-items: center;
      user-select: none;
      border-bottom: 1px solid #b8860b55;
      transition: background-color 0.3s ease;
      border-radius: 8px;
      outline-offset: 2px;
    }
    .faq dt:hover,
    .faq dt:focus {
      background-color: #b8860b22;
      outline: none;
      box-shadow: 0 0 8px #ffd700cc;
    }
    .faq dt .icon {
      transition: transform 0.3s ease;
      color: #ffd700;
      font-size: 1rem;
      flex-shrink: 0;
    }
    .faq dt[aria-expanded="true"] .icon {
      transform: rotate(180deg);
    }
    .faq dd {
      margin-top: 0.5rem;
      padding-left: 1rem;
      line-height: 1.4;
      color: #f0e9e1cc;
      display: none;
      animation: fadeIn 0.3s ease forwards;
    }
    .faq dd.show {
      display: block;
    }
    /* Contact */
    .contact {
      margin-top: 2.5rem;
      max-width: 420px;
      margin-left: auto;
      margin-right: auto;
      background: #1a1a2e;
      border-radius: 16px;
      border: 1px solid #b8860b;
      box-shadow: 0 0 12px #b8860baa;
      padding: 1rem 1.25rem;
      color: #e0c97a;
      font-size: 0.75rem;
      user-select: text;
      animation: fadeInUp 1s ease forwards;
      opacity: 0;
      transform: translateY(20px);
      animation-delay: 5.2s;
      animation-fill-mode: forwards;
      line-height: 1.3;
    }
    .contact h2 {
      font-size: 1.25rem;
      font-weight: 800;
      color: #ffd700;
      text-align: center;
      margin-bottom: 0.75rem;
      text-shadow: 0 0 8px #ffd700cc;
      animation: textGlow 3s ease-in-out infinite alternate;
    }
    .contact p {
      margin-bottom: 0.75rem;
      text-align: center;
      color: #fbbf24;
      font-size: 0.75rem;
      line-height: 1.3;
    }
    .contact .info-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.5rem 0.75rem;
      font-weight: 600;
      color: #f0e9e1cc;
      font-size: 0.75rem;
    }
    .contact .info-item {
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    .contact .info-item i {
      color: #ffd700;
      font-size: 1rem;
      filter: drop-shadow(0 0 4px #ffd700cc);
      flex-shrink: 0;
    }
    /* Sticky floating download button bottom center */
    .floating-download {
      position: fixed;
      bottom: 1.25rem;
      left: 50%;
      transform: translateX(-50%);
      z-index: 70;
      background: linear-gradient(90deg, #b8860b 0%, #ffd700 25%, #b8860b 50%, #ffd700 75%, #b8860b 100%);
      background-size: 200% 100%;
      animation: shimmer 3s linear infinite;
      color: #1a1a1a;
      font-weight: 700;
      box-shadow: 0 0 20px #ffd700cc;
      border-radius: 9999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0 1.25rem;
      font-size: 0.875rem;
      user-select: none;
      cursor: pointer;
      border: none;
      height: 40px;
      white-space: nowrap;
      min-width: 140px;
      max-width: 90vw;
      box-sizing: border-box;
      transition: box-shadow 0.3s ease, transform 0.2s ease;
      animation: floatPulse 3s ease-in-out infinite;
    }
    .floating-download:hover,
    .floating-download:focus {
      box-shadow: 0 0 30px #ffec8b, 0 0 40px #ffd700;
      outline: none;
      transform: translateX(-50%) scale(1.1);
    }
    .floating-download i {
      font-size: 1.125rem;
    }
    @keyframes floatPulse {
      0%, 100% {
        transform: translateX(-50%) translateY(0);
        box-shadow: 0 0 20px #ffd700cc;
      }
      50% {
        transform: translateX(-50%) translateY(-6px);
        box-shadow: 0 0 30px #ffec8bcc;
      }
    }
    /* Responsive */
    @media (min-width: 768px) {
      header nav {
        display: flex !important;
      }
      header nav.mobile-menu {
        display: none !important;
      }
      main {
        max-width: 720px;
        padding: 0 2rem;
      }
      .hero {
