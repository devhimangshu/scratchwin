  <script>
    // Mobile menu toggle
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    menuButton.addEventListener('click', () => {
      const expanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', !expanded);
      if (mobileMenu.classList.contains('hidden')) {
        mobileMenu.classList.remove('hidden');
        // Set tabindex to 0 for accessibility
        const links = mobileMenu.querySelectorAll('a');
        links.forEach(link => {
          link.tabIndex = 0;
        });
      } else {
        mobileMenu.classList.add('hidden');
        // Set tabindex to -1 for accessibility
        const links = mobileMenu.querySelectorAll('a');
        links.forEach(link => {
          link.tabIndex = -1;
        });
      }
    });

    // FAQ toggle with icon rotation and ARIA
    const faqItems = document.querySelectorAll('.faq dt');
    faqItems.forEach(dt => {
      dt.addEventListener('click', () => {
        const expanded = dt.getAttribute('aria-expanded') === 'true';
        dt.setAttribute('aria-expanded', !expanded);
        dt.setAttribute('aria-pressed', !expanded);
        const dd = dt.nextElementSibling;
        if (dd) {
          if (expanded) {
            dd.hidden = true;
            dd.classList.remove('show');
          } else {
            dd.hidden = false;
            dd.classList.add('show');
          }
        }
      });
      dt.addEventListener('keydown', e => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          dt.click();
        }
      });
    });

    // Floating coins logic
    const coinsContainer = document.getElementById('floating-coins-container');
    const coinCount = 15;
    const coinSrc = "https://html-generator.com/uploads/images/2025/05/29/20547SJV0MCNRVP.png";

    function createCoin() {
      const coin = document.createElement('img');
      coin.src = coinSrc;
      coin.alt = "Golden coin with Indian Rupee symbol, shiny and glowing";
      coin.className = 'coin';
      coin.style.left = Math.random() * 100 + 'vw';
      coin.style.top = 110 + 'vh';
      coin.style.animationDuration = (8 + Math.random() * 7) + 's';
      coin.style.animationDelay = (Math.random() * 15) + 's';
      coin.style.opacity = 0.8 + Math.random() * 0.4;
      coinsContainer.appendChild(coin);

      coin.addEventListener('animationend', () => {
        coin.style.left = Math.random() * 100 + 'vw';
        coin.style.top = 110 + 'vh';
        coin.style.animationDuration = (8 + Math.random() * 7) + 's';
        coin.style.animationDelay = '0s';
        coin.style.opacity = 0.8 + Math.random() * 0.4;
        coin.style.animationPlayState = 'running';
      });
    }

    for(let i=0; i<coinCount; i++) {
      createCoin();
    }

    // Video play modal logic
    const playButton = document.getElementById('play-video-button');
    const videoModal = document.getElementById('video-modal');
    const videoIframe = document.getElementById('video-iframe');
    const closeButton = document.getElementById('close-video-button');

    // YouTube video ID (example: Rick Astley - Never Gonna Give You Up)
    const youtubeVideoID = "z_1Oqh_MiXE";

    playButton.addEventListener('click', () => {
      videoIframe.src = `https://www.youtube.com/embed/${youtubeVideoID}?autoplay=1&rel=0`;
      videoModal.classList.add('active');
      // Prevent background scroll
      document.body.style.overflow = 'hidden';
      // Focus close button for accessibility
      closeButton.focus();
    });

    closeButton.addEventListener('click', () => {
      videoIframe.src = "";
      videoModal.classList.remove('active');
      // Restore background scroll
      document.body.style.overflow = '';
      // Return focus to play button
      playButton.focus();
    });

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && videoModal.classList.contains('active')) {
        closeButton.click();
      }
    });

    // Accessibility: allow keyboard to open video modal by Enter or Space on video-wrapper
    const videoWrapper = document.getElementById('video-wrapper');
    videoWrapper.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        playButton.click();
      }
    });
